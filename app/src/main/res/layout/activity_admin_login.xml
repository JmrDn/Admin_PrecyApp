<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/adminbg"
    tools:context=".AdminLogin">

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="600dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/blueblack"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/adminicon"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:src="@drawable/adminicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adminicon"
                android:text="Admin"
                android:textSize="30sp"
                android:textColor="@color/semiwhite"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/admin_email"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adminicon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:backgroundTint="@color/semiwhite"
                android:backgroundTintMode="screen"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="20dp"
                android:drawableTint="@color/bblue"
                android:hint="Email"

                android:singleLine="true"
                android:paddingBottom="20dp"
                android:textColorHint="@color/semiwhite" />

            <EditText
                android:id="@+id/admin_password"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/admin_email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/semiwhite"
                android:backgroundTintMode="screen"
                android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                android:drawablePadding="20dp"
                android:drawableTint="@color/bblue"
                android:singleLine="true"
                android:hint="Password"
                android:paddingBottom="20dp"
                android:textColorHint="@color/semiwhite" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/login_btn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/admin_password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@color/bblue"
                android:text="Log in"
                android:textColor="@color/semiwhite" />

            <ProgressBar
                android:id="@+id/login_progressBar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/admin_password"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:progressBackgroundTint="@color/bblue"/>


        </RelativeLayout>



    </androidx.cardview.widget.CardView>


</RelativeLayout>